# LinkedIn Research Framework Configuration Template
# Copy this file to .env and update with your actual API keys

# OpenAI API Key (required for AI content generation)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o

# 5SIM API Key (required for SMS verification)
FIVESIM_API_KEY=your_5sim_api_key_here

# EmailOnDeck API Key (required for email verification)
EMAILONDECK_API_KEY=your_emailondeck_api_key_here

# Geonode Proxy Credentials (required for proxy rotation)
# Format: username:password@endpoint:port
GEONODE_CREDENTIALS=your_geonode_credentials_here

# Browserbase Configuration (AI browser infra)
BROWSERBASE_API_KEY=your_browserbase_api_key
BROWSERBASE_PROJECT_ID=your_browserbase_project_id

# Stagehand AI Browser Automation
STAGEHAND_ENV=BROWSERBASE
STAGEHAND_HEADLESS=true
STAGEHAND_DEBUG_DOM=false

# Database Configuration
DATABASE_URL=sqlite:///framework/data/linkedin_research.db

# Flask Configuration
FLASK_ENV=production
FLASK_SECRET_KEY=generate_a_random_secret_key_here

# Raspberry Pi optimizations
MAX_WORKERS=2
WORKER_TIMEOUT=30
MAX_REQUESTS=1000

# Security Configuration
SESSION_TIMEOUT=3600
ENABLE_RATE_LIMITING=true
MAX_REQUESTS_PER_MINUTE=60

# Docker Configuration (for production deployment)
BACKEND_PORT=5001
FRONTEND_HTTP_PORT=8080
FRONTEND_HTTPS_PORT=8443

# Optional: PostgreSQL Configuration (if using postgres instead of SQLite)
# Note: If all PostgreSQL variables are set, they take priority over DATABASE_URL
POSTGRES_HOST=localhost
POSTGRES_IP=127.0.0.1
POSTGRES_DB=linkedin_research
POSTGRES_USER=linkedin_user
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_PORT=5432

# Optional: Redis Configuration (for caching)
# REDIS_URL=redis://redis:6379/0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/app/framework/logs/linkedin_research.log
